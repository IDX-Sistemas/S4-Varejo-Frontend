<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog
		title="Marcas"
		class="sapUiPopupWithPadding sapUiSizeCompact"
		items="{
			path: '/Marcas',
			sorter:{
				path: 'Codigo'
			}
		}"
		search="_handleValueHelpSearch"
		confirm="_handleValueHelpClose"
		cancel="_handleValueHelpClose">
		<columns>
			<Column>
				<header>
					<Text text="Marca"/>
				</header>
			</Column>
		</columns>
		<ColumnListItem>
			<cells>
				<ObjectIdentifier
						title="{Codigo} {Nome}"
						text="{Codigo}"/>
			</cells>
		</ColumnListItem>
		
	</TableSelectDialog>
</core:FragmentDefinition>
<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" 
   xmlns:f="sap.ui.layout.form">
   <f:SimpleForm 
				id="form"
				editable="true"
				layout="ResponsiveGridLayout"
				labelSpanXL="4"
				labelSpanL="4"
				labelSpanM="4"
				labelSpanS="12"
				adjustLabelSpan="false"
				emptySpanXL="0"
				emptySpanL="0"
				emptySpanM="0"
				emptySpanS="0"
				columnsXL="3"
				columnsL="2"
				columnsM="2"
				title="Incluir Usuario"
				singleContainerFullSize="true">
				<f:content>
					<Title xmlns="sap.ui.core" text="Dados do Usuario"/> 
					
					<Label text="Nome"/>
					<Input value="{Nome}" width="50%" required="true" />
					
					<Label text="Senha"/>
					<Input value="{Senha}" type="Password" width="50%" required="true" />

					<Label text="Função"/>
					<Input showValueHelp="true" required="true"
										value="{UsuarioFuncaoId}"
										valueHelpRequest="handleSearchUsuarioFuncao"
										valueHelpOnly="true" width="50%"/>

					<Title xmlns="sap.ui.core" /> 
					<Title xmlns="sap.ui.core" /> 
					
				</f:content>	
			</f:SimpleForm>
</core:FragmentDefinition>

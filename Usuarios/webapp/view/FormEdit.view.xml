 <mvc:View controllerName="Usuarios.controller.FormEdit"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	height="100%">
	<Page  showHeader="false"  >
		<content>
			<Fragment xmlns="sap.ui.core" fragmentName="Usuarios.fragments.Form" type="XML" />  
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button  text="Salvar"  icon="sap-icon://save" press="save"   type="Emphasized" />
				<Button  text="Cancelar"  icon="sap-icon://nav-back"   press="cancel" />
			</Toolbar>
		</footer>
	</Page>
</mvc:View> 

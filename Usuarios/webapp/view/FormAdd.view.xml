 <mvc:View controllerName="Usuarios.controller.FormAdd"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	height="100%">
	<Page  showHeader="false"  >
		<content>
			<f:SimpleForm 
				id="form"
				editable="true"
				layout="ResponsiveGridLayout"
				labelSpanXL="4"
				labelSpanL="4"
				labelSpanM="4"
				labelSpanS="12"
				adjustLabelSpan="false"
				emptySpanXL="0"
				emptySpanL="0"
				emptySpanM="0"
				emptySpanS="0"
				columnsXL="3"
				columnsL="2"
				columnsM="2"
				title="Incluir Usuario"
				singleContainerFullSize="true">
				<f:content>
					<Title xmlns="sap.ui.core" text="Dados do Usuario"/> 
					
					<Label text="Nome"/>
					<Input value="{Nome}" width="50%" required="true" />
					
					<Label text="Senha"/>
					<Input value="{Senha}" type="Password" width="50%" required="true" />

					<Title xmlns="sap.ui.core" /> 
					<Title xmlns="sap.ui.core" /> 
					
				</f:content>	
			</f:SimpleForm>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button  text="Salvar"  icon="sap-icon://save"   press="save"   type="Emphasized" />
				<Button  text="Cancelar"  icon="sap-icon://nav-back"   press="cancel" />
			</Toolbar>
		</footer>
	</Page>
</mvc:View> 

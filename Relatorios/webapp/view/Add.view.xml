<mvc:View controllerName="Relatorios.controller.Add"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
    <Page showHeader="false" class="sapUiResponsiveContentPadding">
		<content>
            <Fragment xmlns="sap.ui.core" fragmentName="Relatorios.fragments.Form" type="XML" />  
        </content>
        <footer>
            <Toolbar >
                <ToolbarSpacer />
                <Button text="Salvar" icon="sap-icon://save" type="Emphasized" press=".save" />
                <Button text="Cancelar" press=".cancel" />
            </Toolbar >
        </footer>
    </Page>

</mvc:View>
